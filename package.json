{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run copy-static-assets",
    "build-ts": "tsc",
    "debug-build": "npm run build && npm run start",
    "cont-int": "npm run test && npm run-script lint",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "dev": "nodemon src/bin/server.ts",
    "test": "jest --detectOpenHandles --forceExit --verbose",
    "watch-test": "jest --watchAll --detectOpenHandles --forceExit --coverage --verbose --testTimeout=7000",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts}' --quiet --fix",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "lint:ts": "eslint --ext=jsx,ts src",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "serve": "npm run build && node dist/src/bin/server.js",
    "start": "npm run build && node dist/src/bin/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run dev\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run debug\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/src/bin/server.js",
    "watch-d": "export DEBUG=*",
    "debug": "export DEBUG=* && npm run watch",
    "watch-build": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-d\" \"npm run watch-node\""
  },
  "keywords": [],
  "author": "Oluwabukola Tina",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.9",
    "@types/crypto-js": "^4.0.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/express-mongo-sanitize": "^1.3.2",
    "@types/express-rate-limit": "^5.1.1",
    "@types/faker": "^5.1.7",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^26.0.21",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.31",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.23",
    "@types/nodemailer": "^6.4.0",
    "@types/nunjucks": "^3.1.4",
    "@types/shelljs": "^0.8.8",
    "@types/sinon": "^9.0.11",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.2.0",
    "eslint-plugin-mocha": "^8.0.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.2",
    "express-rate-limit": "^5.2.6",
    "express-winston": "^4.0.5",
    "faker": "^5.4.0",
    "helmet": "^4.4.1",
    "http-status-codes": "^2.1.4",
    "jest": "^26.1.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.25",
    "morgan": "^1.10.0",
    "node-mocks-http": "^1.10.1",
    "nodemailer": "^6.4.17",
    "nunjucks": "^3.2.3",
    "shelljs": "^0.8.4",
    "sinon": "^9.0.2",
    "superagent": "^6.1.0",
    "supertest": "^6.1.3",
    "swagger-jsdoc": "^7.0.0-rc.6",
    "swagger-ui-express": "^4.1.6",
    "travis": "^0.1.1",
    "ts-node": "^10.0.0",
    "typescript": "^3.9.7",
    "winston": "^3.3.3",
    "winston-mongodb": "^5.0.7",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/concurrently": "^6.0.1",
    "@types/debug": "^4.1.5",
    "@types/mocha": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "should": "^13.2.3",
    "ts-jest": "^26.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:write && lint-staged"
    }
  },
  "precommit": "NODE_ENV=production lint-staged",
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
